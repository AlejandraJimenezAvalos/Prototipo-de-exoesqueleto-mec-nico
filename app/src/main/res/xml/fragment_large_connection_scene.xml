<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/card_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:elevation="64sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />
        <Constraint
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_stop"
            app:layout_constraintTop_toBottomOf="@+id/card_profile" />
        <Constraint
            android:id="@+id/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pause_button" />
        <Constraint
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:elevation="-1sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/image_back"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_marginEnd="16sp"
            android:elevation="64sp"
            android:rotation="0"
            app:layout_constraintBottom_toBottomOf="@+id/card_profile"
            app:layout_constraintEnd_toEndOf="@+id/card_profile"
            app:layout_constraintTop_toTopOf="@+id/card_profile" />
        <Constraint
            android:layout_height="0sp"
            android:layout_width="0sp"
            app:layout_constraintStart_toStartOf="@+id/card_profile"
            android:id="@+id/onClick"
            app:layout_constraintEnd_toEndOf="@+id/card_profile"
            app:layout_constraintTop_toTopOf="@+id/card_profile"
            app:layout_constraintBottom_toBottomOf="@+id/card_profile" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_profile" />
        <Constraint
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="8sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/card_profile"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="8sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/card_profile"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pause_button" />
        <Constraint
            android:id="@+id/card_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/image_back"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_marginEnd="16sp"
            android:elevation="64sp"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@+id/card_profile"
            app:layout_constraintEnd_toEndOf="@+id/card_profile"
            app:layout_constraintTop_toTopOf="@+id/card_profile" />
        <Constraint
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:elevation="-1sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:layout_height="0sp"
            android:layout_width="0sp"
            app:layout_constraintStart_toStartOf="@+id/card_profile"
            android:id="@+id/onClick"
            app:layout_constraintEnd_toEndOf="@+id/card_profile"
            app:layout_constraintTop_toTopOf="@+id/card_profile"
            app:layout_constraintBottom_toBottomOf="@+id/card_profile" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">
        <OnClick app:targetId="@+id/onClick" />
    </Transition>
</MotionScene>

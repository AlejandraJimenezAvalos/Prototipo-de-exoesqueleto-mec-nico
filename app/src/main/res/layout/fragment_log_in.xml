<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:theme="@style/ThemePink"
    tools:context=".ui.fragments.login.LogInFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16sp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@mipmap/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/textView20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_email_login"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/correo"
                tools:text="email@email.com"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:layout_marginTop="8sp"
            app:counterMaxLength="15"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/layout_email_login"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_lock"
                android:hint="@string/contrase_a"
                tools:text="contraseÃ±a"
                android:drawablePadding="16sp"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_login"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:text="@string/iniciar"
            app:layout_constraintBottom_toBottomOf="@+id/button_lost_your_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_lost_your_password"
            app:layout_constraintTop_toTopOf="@+id/button_lost_your_password" />

        <Button
            android:id="@+id/button_lost_your_password"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8sp"
            android:layout_marginTop="16sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="@string/olvidaste_tu_contrase_a"
            app:layout_constraintEnd_toStartOf="@+id/button_login"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_password_login" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/o_usa_tu_cuenta_de"
            android:layout_marginTop="16sp"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_lost_your_password" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/button_login_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            tools:layout_editor_absoluteX="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    tools:context=".ui.activity.ChatActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/image_activity_chat_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_arrow_left"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/card_image_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="24sp"
        app:layout_constraintStart_toEndOf="@+id/image_activity_chat_back"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/circle_image_view_profile"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:contentDescription="@string/image_profile"
            android:src="@drawable/ic_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_activity_chat_name"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/card_image_profile"
        app:layout_constraintEnd_toStartOf="@+id/image_activity_chat_more"
        app:layout_constraintStart_toEndOf="@+id/card_image_profile"
        app:layout_constraintTop_toTopOf="@+id/card_image_profile"
        tools:text="@tools:sample/full_names" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/image_activity_chat_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_more_vert"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/card_image_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_image_profile"
        app:tint="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chats_activity"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:orientation="vertical"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/layout_message"
        app:layout_constraintTop_toBottomOf="@+id/card_image_profile"
        tools:itemCount="3"
        tools:layout_editor_absoluteX="16dp"
        tools:listitem="@layout/item_my_message" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_message"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_view_send"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/aa"
            android:maxEms="10"
            android:maxLines="3"
            tools:text="@tools:sample/lorem/random" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/image_view_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/send_message"
        android:src="@drawable/ic_send_black"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_message"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
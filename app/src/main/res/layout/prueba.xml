<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/image_back"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:src="@drawable/ic_round_keyboard_arrow_down_24"
        android:contentDescription="@string/button_back"
        android:layout_marginEnd="16sp"
        android:elevation="64sp"
        android:rotation="0"
        app:layout_constraintBottom_toBottomOf="@+id/card_profile"
        app:layout_constraintEnd_toEndOf="@+id/card_profile"
        app:layout_constraintTop_toTopOf="@+id/card_profile"/>

    <TextView
        android:id="@+id/textView27"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="8sp"
        android:text="@string/paciente"
        app:layout_constraintBottom_toTopOf="@+id/card_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16sp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="42sp"
                android:layout_height="42sp"
                app:cardCornerRadius="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/profile"
                    tools:src="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textName"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                app:layout_constraintEnd_toStartOf="@+id/image_play2"
                app:layout_constraintStart_toEndOf="@+id/cardView5"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/full_names" />

            <TextView
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16sp"
                app:layout_constraintEnd_toStartOf="@+id/image_play2"
                app:layout_constraintStart_toStartOf="@+id/textName"
                app:layout_constraintTop_toBottomOf="@+id/textName"
                tools:text="Rutina de ejersicio" />

            <ImageView
                android:id="@+id/image_stop2"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginEnd="56dp"
                android:contentDescription="@string/stop"
                android:src="@drawable/ic_stop"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_play2"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/play"
                android:src="@drawable/ic_play"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/image_stop2"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_profile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:text="@string/controles"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="16sp"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:layout_editor_absoluteX="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16sp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_walk_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/caminata_repeticiones"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_step_time"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pasos_tiempo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/switch_walk_exercise" />

                    <TextView
                        android:id="@+id/text_steps"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/pasos"
                        app:layout_constraintEnd_toStartOf="@+id/text_time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/switch_step_time" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_step"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:valueFrom="5.0"
                        android:valueTo="30.0"
                        app:layout_constraintEnd_toEndOf="@+id/text_steps"
                        app:layout_constraintStart_toStartOf="@+id/text_steps"
                        app:layout_constraintTop_toBottomOf="@+id/text_steps" />

                    <TextView
                        android:id="@+id/text_time"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/tiempo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/text_steps"
                        app:layout_constraintTop_toTopOf="@+id/text_steps" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_time"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:valueFrom="1.0"
                        android:valueTo="10.0"
                        app:layout_constraintEnd_toEndOf="@+id/text_time"
                        app:layout_constraintStart_toStartOf="@+id/text_time"
                        app:layout_constraintTop_toBottomOf="@+id/text_time" />

                    <TextView
                        android:id="@+id/text_repetition"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:text="@string/repeticiones"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/slider_step" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_repetition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:valueFrom="1.0"
                        android:valueTo="10.0"
                        app:layout_constraintTop_toBottomOf="@+id/text_repetition"
                        tools:layout_editor_absoluteX="16dp" />

                    <TextView
                        android:id="@+id/text_aternaciones"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16sp"
                        android:text="@string/alternaciones"
                        app:layout_constraintTop_toBottomOf="@+id/slider_repetition"
                        tools:layout_editor_absoluteX="16dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.ChipGroup"
                        app:layout_constraintTop_toBottomOf="@+id/text_aternaciones"
                        android:layout_marginTop="8sp">

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/derecha" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/izquierda" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ambas" />
                    </com.google.android.material.chip.ChipGroup>

                    <ImageView
                        android:id="@+id/image_play"
                        android:layout_width="42sp"
                        android:layout_height="42sp"
                        android:background="@drawable/border_withe"
                        android:contentDescription="@string/play"
                        android:padding="4sp"
                        android:layout_marginTop="8sp"
                        android:src="@drawable/ic_play"
                        app:layout_constraintEnd_toStartOf="@+id/image_pause"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/chipGroup" />

                    <ImageView
                        android:id="@+id/image_pause"
                        android:layout_width="42sp"
                        android:layout_height="42sp"
                        android:background="@drawable/border_withe"
                        android:contentDescription="@string/pausar"
                        android:padding="4sp"
                        android:src="@drawable/ic_pause"
                        app:layout_constraintEnd_toStartOf="@+id/image_stop"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/image_play"
                        app:layout_constraintTop_toTopOf="@+id/image_play" />

                    <ImageView
                        android:id="@+id/image_stop"
                        android:layout_width="42sp"
                        android:layout_height="42sp"
                        android:background="@drawable/border_withe"
                        android:contentDescription="@string/stop"
                        android:padding="4sp"
                        android:src="@drawable/ic_stop"
                        app:layout_constraintEnd_toStartOf="@+id/imageFinalise"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/image_pause"
                        app:layout_constraintTop_toTopOf="@+id/image_play" />

                    <ImageView
                        android:id="@+id/imageFinalise"
                        android:layout_width="42sp"
                        android:layout_height="42sp"
                        android:background="@drawable/border_withe"
                        android:contentDescription="@string/desconectar"
                        android:padding="4sp"
                        android:src="@drawable/ic_done"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/image_stop"
                        app:layout_constraintTop_toTopOf="@+id/image_play"
                        app:tint="?attr/colorPrimary" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView6"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:text="@string/pendientes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_heart" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reclyclerPendings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                tools:itemCount="1"
                tools:listitem="@layout/item_work" />

            <TextView
                android:id="@+id/textView7"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="16sp"
                android:text="@string/datos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView8" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_heart"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="8sp"
                app:layout_constraintEnd_toStartOf="@+id/cardTemperature"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16sp">

                    <TextView
                        android:id="@+id/textView9"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pulso_cardiaco"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="48sp"
                        android:layout_height="48sp"
                        android:contentDescription="@string/heart"
                        android:src="@drawable/ic_heart_pulse_solid"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9"
                        app:tint="#DC0000" />

                    <TextView
                        android:id="@+id/textHeartPulse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4sp"
                        android:layout_marginTop="4sp"
                        android:text="96"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView9" />

                    <TextView
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4sp"
                        android:layout_marginBottom="8sp"
                        android:text="@string/bpm"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textHeartPulse" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTemperature"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_heart"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16sp">

                    <TextView
                        android:id="@+id/textView26"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/temperatura"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="48sp"
                        android:layout_height="48sp"
                        android:contentDescription="@string/temperature"
                        android:src="@drawable/ic_temperature_quarter_solid"
                        app:layout_constraintBottom_toBottomOf="@+id/text_temperature"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView26"
                        app:tint="#2196F3" />

                    <TextView
                        android:id="@+id/text_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4sp"
                        android:layout_marginTop="4sp"
                        android:text="24"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView12"
                        app:layout_constraintTop_toBottomOf="@+id/textView26" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4sp"
                        android:text="@string/dot"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/text_temperature"
                        app:layout_constraintStart_toEndOf="@+id/text_temperature"
                        app:layout_constraintTop_toTopOf="@+id/text_temperature" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:contentDescription="@string/play"
        android:src="@drawable/ic_pause"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:contentDescription="@string/stop"
        android:src="@drawable/ic_stop"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pause_button" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:elevation="-1sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
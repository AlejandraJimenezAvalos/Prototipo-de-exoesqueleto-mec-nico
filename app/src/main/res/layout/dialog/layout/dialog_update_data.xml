<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350sp"
    android:layout_height="wrap_content"
    android:paddingTop="30sp"
    android:paddingBottom="30sp"
    style="@style/AppTheme.withe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.ocuro"
        android:text="@string/introduzca_lo_que_se_le_pide"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:textColorHint="#818181"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField.rosa"
            android:drawableTint="@color/pinkDark"
            android:inputType="textPersonName"
            tools:targetApi="m" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16sp"
        android:layout_marginStart="16sp">

        <Button
            android:id="@+id/button_input_update_cancel"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="@string/cancelar"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_input_update_ok"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="@string/aceptar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="30sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16sp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view_profile_view"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="10sp"
                android:background="@drawable/button_border_pink" />

            <TextView
                android:id="@+id/text_profile_view_name"
                style="@style/TextView.pink.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/text_profile_view_user"
                style="@style/TextView.ocuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User" />

            <TextView
                android:id="@+id/text_profile_view_check"
                style="@style/TextView.ocuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:text="Cuenta verificada" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/pinkDark"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/linear_to_call_cell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables,UselessParent"
                    android:gravity="center"
                    android:layout_margin="8sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_phone_android"
                        android:tint="@color/pinkDark"
                        android:contentDescription="@string/todo" />

                    <TextView
                        style="@style/TextView.ocuro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/llamar" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_send_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables,UselessParent"
                    android:gravity="center"
                    android:layout_margin="8sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_mail"
                        android:tint="@color/pinkDark"
                        android:contentDescription="@string/todo" />

                    <TextView
                        style="@style/TextView.ocuro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/escribir_un_mail" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_to_call_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables,UselessParent"
                    android:gravity="center"
                    android:layout_margin="8sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_phone"
                        android:tint="@color/pinkDark"
                        android:contentDescription="@string/todo" />

                    <TextView
                        style="@style/TextView.ocuro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/llamar" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/pinkDark"
                android:layout_marginBottom="20sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/text_profile_view_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView.ocuro"
                android:drawableStart="@drawable/ic_mail"
                android:drawableTint="@color/pinkDark"
                android:drawablePadding="20sp"
                android:text="@string/correo"
                tools:targetApi="m"
                android:layout_margin="8sp"/>

            <TextView
                android:id="@+id/text_profile_view_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView.ocuro"
                android:drawableStart="@drawable/ic_place"
                android:drawableTint="@color/pinkDark"
                android:drawablePadding="20sp"
                android:text="@string/direcci_n"
                tools:targetApi="m"
                android:layout_margin="8sp"/>

            <TextView
                android:id="@+id/text_profile_view_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView.ocuro"
                android:drawableStart="@drawable/ic_phone_android"
                android:drawableTint="@color/pinkDark"
                android:drawablePadding="20sp"
                android:text="@string/celular"
                tools:targetApi="m"
                android:layout_margin="8sp"/>

            <TextView
                android:id="@+id/text_profile_view_phone"
                style="@style/TextView.ocuro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone"
                android:drawableTint="@color/pinkDark"
                android:drawablePadding="20sp"
                android:text="@string/telefono"
                tools:targetApi="m"
                android:layout_margin="8sp"/>

            <TextView
                android:id="@+id/text_profile_view_school"
                style="@style/TextView.ocuro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_school"
                android:drawableTint="@color/pinkDark"
                android:drawablePadding="20sp"
                android:text="@string/estudio"
                tools:targetApi="m"
                android:layout_margin="8sp"/>

            <Button
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                style="@style/Button"
                android:text="@string/eliminar_de_mi_lista_de_contactos"
                android:layout_marginBottom="10sp"/>

            <Button
                android:id="@+id/button_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Button"
                android:text="@string/reportar"
                android:layout_marginBottom="10sp"/>

            <Button
                android:id="@+id/button_dimiss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Button.borde"
                android:textColor="@color/pinkDark"
                android:text="@string/cerrar"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
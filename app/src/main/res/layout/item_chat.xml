<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:background="@color/blueDark"
    android:id="@+id/item_chat">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_item_chat"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_item_chat_name"
        style="@style/TextView.pink.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/text_item_chat_message"
        app:layout_constraintStart_toEndOf="@+id/image_item_chat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_item_chat_message"
        style="@style/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_item_chat"
        app:layout_constraintTop_toBottomOf="@+id/text_item_chat_name" />

    <TextView
        android:id="@+id/text_item_chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
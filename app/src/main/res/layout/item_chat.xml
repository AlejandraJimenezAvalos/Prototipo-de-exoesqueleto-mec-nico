<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="chat"
            type="com.example.exoesqueletov1.data.local.entity.ChatsEntity" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_chat"
        android:layout_width="match_parent"
        android:layout_marginBottom="8sp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_image_profile_item_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_item_chat"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/image_profile"
                    tools:src="@tools:sample/avatars"
                    android:src="@drawable/ic_profile" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_item_chat_name"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                app:layout_constraintBottom_toTopOf="@+id/text_item_chat_message"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16sp"
                android:text="@{chat.name}"
                app:layout_constraintStart_toEndOf="@+id/card_image_profile_item_chat"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/text_item_chat_message"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16sp"
                android:maxLines="1"
                android:text="@{chat.message}"
                app:layout_constraintStart_toStartOf="@+id/text_item_chat_name"
                app:layout_constraintTop_toBottomOf="@+id/text_item_chat_name"
                tools:text="@tools:sample/lorem/random" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>